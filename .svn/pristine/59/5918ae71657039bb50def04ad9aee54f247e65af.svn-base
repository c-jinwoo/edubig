<%@ page language="java" contentType="text/html; charset=utf-8" pageEncoding="utf-8"%>
<%@ include file="/WEB-INF/jsp/ccedu/inc/taglib_inc.jsp"%>
<%@ page import="com.sangs.support.SangsProperties" %>
<!DOCTYPE html>
<html lang="ko">
<head>
	<title>신용회복위원회 신용교육원</title>
	<%@ include file="/WEB-INF/jsp/ccedu/inc/head_inc.jsp"%>
	<script src="/cmmn/js/main.js"></script>
	<script type="text/javascript" src="/cmmn/js/jquery.cookie.js"></script> 
	<script type="text/javascript">
		$(document).ready(function(){
			
			$('.main_pop_wrap').hide();
			
			if(!$.cookie('modal_chk')) {
				$('.layerpop_notice').show();
			}
			if(!$.cookie('popup_chk')) {
				$('.main_pop_wrap').show();
			}
			
			if(!$.cookie('popupNew')) {
				window.open('/cmmn/popupNew.html?ver=20480820','newPopUp','width=800,height=800, scrollbars=YES');
			}
			
		});
	
		function fnNotViewPopup(){
			$.cookie('popup_chk','Y',{expires:1});
			closeMainPop();
		}
		function modalDayClose(){
			$.cookie('modal_chk','Y',{expires:1});
			$('.layerpop_notice').hide();
		}
		function modalClose(){
			$('.layerpop_notice').hide();
		}
		
		
		
		
		
	</script>
</head>

<body>

<!-- skip nav -->
<%@ include file="/WEB-INF/jsp/ccedu/inc/nav_inc.jsp"%>
<!--// skip nav -->


<div id="wrap">

	<!-- layer pop  -->
	<div class="layerpop_notice" tabindex="0" data-tooltip-con="popsearch03" data-focus="popsearch03" data-focus-prev="popsearch03-close" style="display: none;">
		<div class="layer_mask tooltip-close"></div><!-- 블랙mask영역 -->
		<div class="layer_notice">
			<div class="lc_head">
				<h4 class="lc_tit">신용회복위원회 신용교육원</h4>
			</div>
			<div class="lc_cont">
                <P class="notice_popup">
                <!-- 기존 START 2018-08-30  -->
<!--                 <img src="/cmmn/images/main_popup.png" alt="신용회복위원회 신용교육원 홈페이지를 방문해주셔서 감사드립니다. 홈페이지 전산장애 : 상상스토리 헬프데스크 02-6671-9311교육업무 : 신용회복위원회 신용교육원 02-750-1233~1"> -->
				<!-- 기존 END 2018-08-30  -->
                
                <!-- 2018-08-28 김동인 작업 S --> 
                <img src="/cmmn/images/popup.png" alt="신용회복위원회 신용교육원 홈페이지를 방문해주셔서 감사드립니다. 홈페이지 전산장애 : 상상스토리 헬프데스크 02-6671-9311교육업무 : 신용회복위원회 신용교육원 02-750-1233~1">
				<!-- 2018-08-28 김동인 작업 E -->
                </P>
					<div class="c_btn_center">
						<button class="btn_bluebg02" type="button" onclick="modalDayClose(); return false;">오늘하루 열지 않기</button>
					<button class="btn_blueline02" onclick="modalClose(); return false;" type="button">닫기</button>
					</div>
			</div>
		</div>
		<button class="btn_close tooltip-close" id="popOfficeClose" data-focus="popsearch03-close" onclick="modalClose(); return false;" data-focus-next="popsearch03">닫기</button>
	</div>
	<!--// layer pop -->


	<!-- main_pop -->
	<c:if test="${fn:length(noticePopList) ne 0 }">
		<div class="main_pop_wrap">
			<div class="main_pop swiper-container swiper-container-horizontal swiper-container-fade">
	
				<div class="swiper-wrapper">
					<c:forEach var="result" items="${noticePopList}" varStatus="status">
					
						<c:if test="${status.index eq 0 }">
							<div class="swiper-slide" style="opacity: 1;">
								<div class="pc">
									<a href="${result.LINK_URL}"><img src="/att_file/popupimg/<c:out value="${result.SAVFILE}"/>" alt="<c:out value="${result.POP_TITLE}"/>"></a>
								</div>
								<div class="mobile">
									<a href="${result.LINK_URL}">
										<p class="tit"><c:out value="${result.POP_TITLE}"/></p>
										<p class="txt"><c:out value="${result.POP_CONTENT}"/></p>
									</a>
								</div>
							</div>
						</c:if>
						
						<c:if test="${status.index ne 0 }">
							<div class="swiper-slide" style="opacity: 0;">
								<div class="pc">
									<a href="${result.LINK_URL}"><img src="/att_file/popupimg/<c:out value="${result.SAVFILE}"/>" alt="<c:out value="${result.POP_TITLE}"/>"></a>
								</div> 
								<div class="mobile">
									<a href="${result.LINK_URL}">
										<p class="tit"><c:out value="${result.POP_TITLE}"/></p>
										<p class="txt"><c:out value="${result.POP_CONTENT}"/></p>
									</a>
								</div>
							</div>
						</c:if>
						
					</c:forEach>
				</div>
	
				<div class="swiper_prev_next">
					<button class="swiper-button-prev swiper-button-disabled">Prev</button>
					<button class="swiper-button-next">Next</button>
				</div>
	
				<div class="ctl_btn">
					<button class="cb_none" onclick="fnNotViewPopup()">1일동안 보지 않기</button>
					<button class="btn_close" onclick="closeMainPop()">팝업닫기</button>
				</div>
	
			</div>
		</div>
	</c:if>	
	<!-- // main_pop -->

	<!-- header -->
	<%@ include file="/WEB-INF/jsp/ccedu/inc/header_inc.jsp"%>
	<!--// header -->

	<!-- container -->
	<div id="container">

		<!-- m_content -->
		<div id="m_content">
			
		</div>
	
	</div>
	<!--// container -->

	<!-- foot -->
	<%@ include file="/WEB-INF/jsp/ccedu/inc/footer_inc.jsp"%>
	<!--// foot end -->

</div>

</body>
</html>