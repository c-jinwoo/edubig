/* CSS Document */
/* @import url(notosanskr.css); */

#summaryContainer{
	width:1280px;
	height:760px;
	position: absolute;
	top:0px;
	left:0px;
	overflow:hidden;
/* 	display: hidden; */
}
.sumScene{
	display:block;
	width:1280px;
	height:760px;
	position: relative;
	background: url(../img/summary/bg_summary.png) no-repeat 100% 100% / 100% 100%;
}


#conSubject{
	display: block;
	position: absolute;
	top:30px;
	*top:35px;
	left:50px;
	color:#5e62b6;
	font-size:20px;
	background: url(../img/summary/jisi.png) no-repeat;
	background-position: -0px 11px;
	height: 30px;
	width:100%;
	padding:5px 0 0 20px;
	letter-spacing: -1px;
	z-index: 1;
	

}



.sumPannel{
    width: 1174px;
    height: 607px;
    position: relative;
    /*top: 89px;
    left: 363px;*/
	top: 85px;
	left: 53px;
}

.sumPannel img{
	width:100%;
	height:95%;
}




#tabSet{
	display: block;
	position: absolute;
	/*bottom: 123px;
    left: 56%;*/
	bottom: 60px;
    left: 43%;
}

.tabBtn{
	display: block;
	width:28px;
	height:28px;
	float:left;
	padding:0;
	margin-left:30px;
	margin-right:30px;
	-webkit-transition-duration: 0.2s; /* Safari */
     transition-duration: 0.2s;
	
	border:0px solid #FF0000;;
	cursor: pointer;

	text-indent: -1000em;
	
}

#prevBn{background:url(../img/summary/prev.png) no-repeat; position:absolute; bottom:-2px; left:-7px; height: 33px; width: 33px; }
#prevBn:hover{background:url(../img/summary/prev_over.png) no-repeat; }


#nextBn{background:url(../img/summary/next.png) no-repeat; position:absolute; bottom:-2px; left:95px; height: 33px; width: 33px;}
#nextBn:hover{background:url(../img/summary/next_over.png) }




#sumDownSet{
	display: block;
	position: absolute;
	top:70px;
	right:20px;
	z-index:9999;
}


.sumBtn{
	display: block;
	width:96px; height:32px;
    position: absolute;
	top:-7px;
    right: 115px;
	float:left;
	padding:0;
	border:0px;
	cursor: pointer;
	text-indent: -1000em;
}


#sumBtn{background: url(../img/summary/down_tj.png) no-repeat;}
#sumBtn:hover{background: url(../img/summary/down_Over.png) no-repeat;}

#printBtn{background: url(../img/summary/print_tj.png) no-repeat;}
#printBtn:hover{background: url(../img/summary/print_Over.png) no-repeat;}

