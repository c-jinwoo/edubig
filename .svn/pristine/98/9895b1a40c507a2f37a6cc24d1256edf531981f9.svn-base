.numSet{width:70px; height:30px; position:absolute; 
	/*bottom:126px; left:61.5%; */
	bottom:61px;left:47.5%;
	font-family:'Noto Sans KR'; font-weight:500; font-size:22px;
}
#curNum, #cutline, #toNum{float:left; width:30px; height:30px; text-align:center; margin-right:-5px;}
#cutline{width:10px;}
#curNum{color:#000;}
