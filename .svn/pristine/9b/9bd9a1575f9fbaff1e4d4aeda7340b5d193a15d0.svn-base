<%@ page language="java" contentType="text/html; charset=utf-8" pageEncoding="utf-8"%>
<%@ include file="/WEB-INF/jsp/ccedu/inc/taglib_inc.jsp"%>
<!DOCTYPE html>
<html lang="ko">
<head>
<%@ include file="/WEB-INF/jsp/ccedu/inc/head_inc.jsp"%>
<script type="text/javascript">	
	function tabMove(count) {
		$("#tabNo").val(count);
		$("#frm").attr("action", "/ccedu/bbs/faq.do");			
		$("#frm").submit();
	}			
</script>
</head>
<body>
	<!-- header -->
	<%@ include file="/WEB-INF/jsp/ccedu/inc/header_inc.jsp"%>
	<!--// header -->
	
	<!-- container -->
	<div id="container">
		<div class="con_center">
			<div class="cont_title_wrapper">
				<div class="wrapper">
					<h3 class="cont_title">FAQ</h3>
				</div>			
			</div>
			<form name="frm" id="frm" action="" method="post">
				<input type="hidden" name="bcateno" id="bcateno" value="${REQUEST_DATA.bcateno}"/>
				<input type="hidden" name="bbsNo" id="bbsNo" value=""/>
				<input type="hidden" name="fileId" id="fileId" value=""/>
				<input type="hidden" name="fileSeq" id="fileSeq" value=""/>
				<input type="hidden" id="tabNo" name="tabNo" value="<c:out value='${REQUEST_DATA.tabNo}'/>">
			</form>

			<!-- content 본문 -->
			<div id="content">
				<div class="wrapper">
					<div class="cont_body">	
						<div class="c_section">
							<div class="c_tab col5">
								<ul>
									<li>
									<a href="#" onclick="tabMove('0')" <c:if test="${REQUEST_DATA.tabNo eq '' || REQUEST_DATA.tabNo eq 0 }"> class="on" title="현재페이지" </c:if>>전체</a></li>
									<c:forEach varStatus="stauts" items="${codeList}" var="codeList">
										<li>
											<a href="#" onclick="tabMove('<c:out value='${stauts.count}'/>')" <c:if test="${REQUEST_DATA.tabNo eq stauts.count}"> class="on" title="현재페이지" </c:if> value="<c:out value='${codeList.MT_SUB_CODE}'/>">
												<c:out value='${codeList.MT_SUB_NAME}'/>
											</a>
										</li>
									</c:forEach>
								</ul>	
							</div>					
							<div class="toggle_list">
								<p class="alt_text">자주 질문해주시는 내용을 모아 보다 편리하게 궁금증을 알아볼 수 있습니다.</p>
								<ul>
									<c:forEach var="listData" items="${listData}">
										<li>										
											<div class="q">
												<span class="i">질문</span>
												<a href="#faq_1"><c:out value="${listData.TITLE }" escapeXml="false"/></a>
											</div>
											<div class="a" id="faq_1">
												<span class="alt_text">대답</span>
												<div class="a_con">${listData.CONTENT}</div>
											</div>											
										</li>
									</c:forEach>
								</ul>
							</div>	
						</div>
					</div>
				</div>
			</div>	
		</div>	
	</div>
	<!--// container -->
	
	<!-- foot -->
	<%@ include file="/WEB-INF/jsp/ccedu/inc/footer_inc.jsp"%>
	<!--// foot end -->
</body>
</html>