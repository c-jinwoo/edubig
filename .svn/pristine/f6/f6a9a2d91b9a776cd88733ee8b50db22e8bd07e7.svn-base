	}--%>
	function fnSelectSnsType(type){	
		$("#snsType").val(type);	
		$("#frm").submit();
	}			
	function joinKakao(){
		Kakao.Auth.login({
			success: function(authObj){			  	
				Kakao.Auth.setAccessToken(authObj.access_token);
				fnSelectSnsType("KAKAO");
			},
			fail: function(err) {
			  	console.log("KAKAO login fail");
			},
		});
	}
	
</script>
</html>