<script type="text/javascript">
function move_page(cPage){
	$('#cPage').val(cPage);
	$("#searchWord").val($("#searchText").val());
	$('form[name=frm]').attr('action', '<c:out value="${ctx}"/>/academy/helpdesk/boardDataList.do').submit();
} 

//검색
function searchWord(){
	$('#cPage').val(1);
	$("#searchWord").val($("#searchText").val());
	$("#frm").attr("action" , "/academy/helpdesk/boardDataList.do").submit();
}

//상세보기
function fnView(bbsNo, bcateno){
	$("#searchWord").val($("#searchText").val());
	$("#bbsNo").val(bbsNo);
	$("#bcateno").val(bcateno);
	frm.qu.value = 'insert';
	$("#frm").attr("action", "/academy/helpdesk/boardDataView/" + bcateno + "/" + bbsNo + ".do").submit();
}
</script>





