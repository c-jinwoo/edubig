<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.webapp.ccedu.mapper.OnlineReviewMapper">
    <select id="selectReviewList" resultType="emap" parameterType="dmap">    
	   SELECT
		    (SELECT
		    	COURSETITLE
		   	FROM 
		   		LMS_ED_COURSE
		   	WHERE
		   		COURSENO = A.COURSENO
		   	) AS COURSETITLE
		   	,(SELECT
		   		MBERNM
		   	FROM
		   		LMS_CT_UNITY_MBER
		   	WHERE
		   		UNITY_MBERNO = A.USERNO		   	
		   	) AS WRITER
		    , A.CONTENT
		    , TO_CHAR(A.WDATE, 'YYYY-MM-DD') AS WDATE
		    , A.SCORE
		FROM 
		    LMS_ED_REVIEW A
		    , LMS_ED_COURSE_SEQ B
		WHERE       		    
		    A.USEYN = 'Y'             
       		AND A.CSEQNO = B.CSEQNO
       		AND B.USEYN = 'Y'            
		    <if test="courseno != null and courseno != ''">
        	AND A.COURSENO = #{courseno}
       		</if>		
		ORDER BY
		    A.REVIEWNO DESC
	</select> 
    <select id="selectReviewMap" resultType="emap" parameterType="dmap">
		SELECT
		    CONTENT
		    , WDATE
		    , SCORE
		FROM
		    LMS_ED_REVIEW
		WHERE
		    CSEQNO = #{searchCseqno}
		    AND COURSENO = #{courseno}
		    AND USERNO = #{SES_USERNO}
	</select>
</mapper>