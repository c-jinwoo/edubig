        <security:intercept-url pattern="/**/*logout.do" requires-channel="https" />
        <security:intercept-url pattern="/**/*.do" requires-channel="http" />
        <security:port-mappings>
            <security:port-mapping http="${Globals.domainPort}" https="${Globals.domainSSLPort}"/>
